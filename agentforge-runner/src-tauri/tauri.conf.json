{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "AgentForge Runner",
  "version": "1.0.0",
  "identifier": "com.agentforge.runner",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "AgentForge Runner",
        "width": 800,
        "height": 600,
        "minWidth": 400,
        "minHeight": 300,
        "center": true,
        "resizable": true,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "resources": [
      "resources/python/**/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all",
    "macOS": {
      "fileAssociations": [
        {
          "ext": ["agentforge"],
          "name": "AgentForge Agent",
          "description": "AgentForge Agent Configuration",
          "role": "Editor"
        }
      ],
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "fileAssociations": [
        {
          "ext": ["agentforge"],
          "name": "AgentForge Agent",
          "description": "AgentForge Agent Configuration"
        }
      ]
    },
    "linux": {
      "fileAssociations": [
        {
          "ext": ["agentforge"],
          "name": "AgentForge Agent",
          "description": "AgentForge Agent Configuration"
        }
      ]
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
