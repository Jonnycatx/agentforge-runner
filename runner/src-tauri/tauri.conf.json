{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AgentForge Runner",
  "version": "2.0.0",
  "identifier": "com.agentforge.runner",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "title": "",
        "label": "main",
        "width": 440,
        "height": 700,
        "minWidth": 380,
        "minHeight": 500,
        "maxWidth": 600,
        "resizable": true,
        "center": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "decorations": true,
        "transparent": false,
        "shadow": true,
        "focus": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/**/*"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "fileAssociations": [
      {
        "ext": ["agentforge"],
        "name": "AgentForge Agent",
        "role": "Editor"
      }
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "notification": {
      "all": true
    }
  }
}
