{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AgentForge Runner",
  "version": "2.1.14",
  "identifier": "com.agentforge.runner",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "AgentForge Runner",
        "width": 440,
        "height": 700,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "resources/python/agent_server.py"
    ],
    "icon": [
      "icons/icon.png",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico",
      "icons/icon.icns"
    ],
    "fileAssociations": [
      {
        "ext": ["agentforge"],
        "name": "AgentForge Agent",
        "role": "Editor",
        "mimeType": "application/vnd.agentforge.agent"
      }
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "deep-link": {
      "desktop": {
        "schemes": ["agentforge"]
      }
    }
  }
}
